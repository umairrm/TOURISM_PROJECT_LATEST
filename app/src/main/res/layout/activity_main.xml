<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrad"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_proj_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tourism Mangement"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="@dimen/places_autocomplete_button_padding"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:id="@+id/top_dests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_proj_name"
        android:textAllCaps="true"
        android:text="Top Destinations"
        android:textSize="@dimen/places_autocomplete_button_padding"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="00dp"/>

    <LinearLayout
        android:id="@+id/top_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_dests"
        android:layout_marginTop="20dp"
        android:weightSum="4"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/hunza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hunza"
            android:padding="5sp"
            android:background="#17CF9B"
            android:textColor="@color/black"
            android:layout_marginRight="2sp"
            android:gravity="center"
            android:textAllCaps="true"
            android:clickable="true"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/shogran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shogran"
            android:padding="5sp"
            android:background="#17CF9B"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginRight="2sp"
            android:clickable="true"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/skardu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skardu"
            android:padding="5sp"
            android:gravity="center"
            android:background="#17CF9B"
            android:textColor="@color/black"
            android:layout_marginRight="2sp"
            android:textAllCaps="true"
            android:clickable="true"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/chitral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chitral"
            android:padding="5sp"
            android:background="#17CF9B"
            android:textColor="@color/black"
            android:layout_marginRight="2sp"
            android:gravity="center"
            android:textAllCaps="true"
            android:clickable="true"
            android:layout_weight="1"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/your_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_dests"
        android:layout_marginTop="150dp"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/my_dest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="choose your destinations"
            android:textSize="@dimen/places_autocomplete_button_padding"
            android:background="@color/button_background_color"
            android:textStyle="bold"
            tools:context="com.example.project.MapsActivityHome"
            />
    </LinearLayout>

</RelativeLayout>