<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/top_dests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="Top Destinations"
        android:background="#4DFFCF11"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="00dp"/>

    <LinearLayout
        android:id="@+id/top_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_dests"
        android:layout_marginTop="20dp"
        android:weightSum="4"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/hunza"
            android:layout_width="200dp"
            android:layout_height="260dp"
            android:layout_marginRight="2sp"
            android:layout_weight="1"
            android:background="#4DFFCF11"
            android:clickable="true"
            android:gravity="center"
            android:padding="5sp"
            android:text="H
            u
            n
            z
            a"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shogran"
            android:layout_width="200dp"
            android:layout_height="350dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="2sp"
            android:layout_weight="1"
            android:background="#4DFFCF11"
            android:clickable="true"
            android:gravity="center"
            android:paddingTop="5sp"
            android:text="S
            h
            o
            g
            r
            a
            n"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/skardu"
            android:layout_width="200dp"
            android:layout_height="305dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="2sp"
            android:layout_weight="1"
            android:background="#4DFFCF11"
            android:clickable="true"
            android:gravity="center"
            android:paddingTop="5sp"
            android:text="S
            k
            a
            r
            d
            u"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chitral"
            android:layout_width="200dp"
            android:layout_height="355dp"
            android:layout_marginRight="2sp"
            android:layout_weight="1"
            android:background="#4DFFCF11"
            android:clickable="true"
            android:gravity="center"
            android:padding="5sp"
            android:text="C
            h
            i
            t
            r
            a
            l"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold" />


    </LinearLayout>


    <Button
        android:id="@+id/my_dest"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="500dp"
        android:layout_marginRight="60dp"
        android:background="#00018786"
        android:text="choose your destinations
CLICK HERE!"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:context="com.example.project.MapsActivityHome" />

</RelativeLayout>